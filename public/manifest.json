{
  "manifest_version": 2,
  "name": "Web Request Manager",
  "version": "1.0",
  "icons": {
    "128": "img/logo.png"
  },
  "browser_action": {
    "default_title": "Web Request Manager",
    "default_icon": "img/logo.png"
  },
  "background": {
    "scripts": [
      "app/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "*"
  ]
}